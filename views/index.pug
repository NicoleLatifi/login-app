extends layout


block content
  if user
    a(
      href='http://localhost:9011/oauth2/logout?client_id='+clientId+'&post_logout_redirect_uri=http%3A%2F%2Flocalhost%3A3000%2Flogout'
    ) Logout
    p Hello #{user.firstName}!
  else
    a(
      href='http://localhost:9011/oauth2/authorize?client_id='+clientId+'&response_type=code&redirect_uri=http%3A%2F%2Flocalhost%3A3000%2Foauth-redirect&scope=offline_access&state='+stateValue+'&code_challenge='+challenge+'&code_challenge_method=S256'
    ) Login